{% extends 'base.jinja2' %}

{% block subtitle %}Add Donation{% endblock subtitle %}

{% block content %}
    {% if error %}<p>{{ error }}</p>{% endif %}
    <form method="POST">
        <label for="donor-input">Donor Name:</label><input id="donor-input" type="text" name="donor">
        <label for="amount-input">Amount: </label><input id="amount-input" type="number" name="amount">
        <input type="submit" value="Add donor">
    </form>
{% endblock content %}